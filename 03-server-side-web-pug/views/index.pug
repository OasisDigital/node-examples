doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  title Choose some cards
  link(rel='icon' type='image/x-icon' href='/playing-cards-152-170641.png')
  link(rel='stylesheet' href='/style.css')
body
  h1 Choose five cards

  form(action='/score')
    each card in deck
      input.card(type='checkbox'
        name=card.id
        style='background-image: url(' + cardSvg(card) + ')'
        title=card.display)
    div(style="clear: both")
    button.score(type='submit') Score hand
